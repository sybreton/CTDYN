      real function b0p1(m)
        integer m
        real cgret
        cgret = m*(m+1.e0)/(2*m+1.e0)
        b0p1= cgret
        return
      end 

      real function b0m1(m)
        integer m
        real cgret
        cgret = -m*(m+1.e0)/(2*m+1.e0)
	b0m1= cgret
	return
      end 

cccccccccccccccccccccccccccccccccccccccccccccccccc MMMM
      real function b1p2 (n)
        integer n
        real cgret

       REAL x_in, bct, c3,mmm
       COMMON/ppar/x_in,bct,c3,mmm

c        cgret = n * (n + 0.1E1) ** 2 / (0.2E1 * n + 0.1E1) / (0.2E1 * n +
c     # 0.3E1)

        cgret = n*(1.0+n)*(1-abs(mmm)+n)*(2-abs(mmm)+n)/(6.0+19.0*n+16.0*n**2+4*n**3)

        b1p2 = cgret
        return
      end

cccccccccccccccccccccccccccccccccccccccccccccccc MMMM

      real function b1m2 (n)
        integer n
        real cgret

       REAL x_in, bct, c3,mmm
       COMMON/ppar/x_in,bct,c3,mmm

       cgret = -n ** 2 * (n + 0.1E1) / (0.2E1 * n + 0.1E1) / (0.2E1 * n 
     #- 0.1E1)

cc        cgret = -n*(1+n)*(n+abs(mmm)-1)*(abs(mmm)+n)/(1.0-n-4.0*n**2-4.0*n**3)

        b1m2 = cgret
        return
      end

ccccccccccccccccccccccccccccccccccccccccccccccccc MMMM


      real function b10 (n)
        integer n
        real cgret

       REAL x_in, bct, c3,mmm
       COMMON/ppar/x_in,bct,c3,mmm

c        cgret = n * (n + 0.1E1) * (0.2E1 * n + 0.1E1) / (0.4E1 * n ** 2 -
c     # 0.1E1) / (0.2E1 * n + 0.3E1)

        cgret = (n * (n + 0.1E1)  -3.0*mmm**2) / (0.2E1 * n  -
     # 0.1E1) / (0.2E1 * n + 0.3E1)

        b10 = cgret
        return
      end

ccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccc


      real function b2p3 (m)
        integer m
        real cgret
        cgret = m * (m + 0.1E1) ** 2 / (0.2E1 * m + 0.1E1) / (0.2E1 * m +
     # 0.3E1) * (m + 0.2E1) / (0.2E1 * m + 0.5E1)
        b2p3 = cgret
        return
      end
      real function b2m3 (n)
        integer n
        real cgret
        cgret = -n ** 2 / (0.2E1 * n - 0.3E1) * (n ** 2 - 0.1E1) / (0.4E1
     # * n ** 2 - 0.1E1)
        b2m3 = cgret
        return
      end
      real function b2p1 (n)
        integer n
        real cgret
        cgret = (n + 0.1E1) * n * (n ** 2 + 0.3E1 * n - 0.1E1) / (0.4E1 *
     # n ** 2 - 0.1E1) / (0.2E1 * n + 0.5E1)
        b2p1 = cgret
        return
      end
      real function b2m1 (n)
        integer n
        real cgret
        cgret = -(n + 0.1E1) * n * (n ** 2 - n - 0.3E1) / (0.2E1 * n + 0.
     #1E1) / (0.4E1 * n ** 2 - 0.9E1)
        b2m1 = cgret
        return
      end
